{
  "manifest_version": 3,
  "name": "Codeforces Solved Status",
  "version": "1.0",
  "description": "Shows if a problem has been solved by any user on Codeforces",
  "icons": {
    "16": "icons/icon_16x18.png",
    "48": "icons/icon_48x54.png",
    "128": "icons/icon_128x143.png"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["*://*.codeforces.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Codeforces Solved Status"
  },
  "content_scripts": [
    {
      "matches": ["*://*.codeforces.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
